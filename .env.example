# Jira Configuration
# Your Jira instance URL (e.g., https://yourcompany.atlassian.net)
JIRA_BASE_URL=https://yourcompany.atlassian.net

# Your Jira email address
JIRA_EMAIL=your.email@company.com

# Your Jira API token
# Generate one at: https://id.atlassian.com/manage-profile/security/api-tokens
JIRA_API_TOKEN=your_api_token_here

# Confluence Configuration
# Your Confluence instance URL (may be different from Jira)
CONFLUENCE_BASE_URL=https://yourcompany.atlassian.net/wiki

# Your Confluence email address (may be different from Jira)
CONFLUENCE_EMAIL=your.email@company.com

# Your Confluence API token
# Generate one at: https://id.atlassian.com/manage-profile/security/api-tokens
CONFLUENCE_API_TOKEN=your_confluence_api_token_here

# GitHub Configuration
# Your GitHub personal access token
# Generate one at: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here

# GitHub organization to track (defaults to 'nextworld')
GITHUB_ORG=nextworld

# GitHub Username
GITHUB_USERNAME=your_user_name

# Server Configuration
PORT=3000

# Access Control
# Key required to access the application
ACCESS_KEY=your_access_key_here

# Default user to display on dashboard
DEFAULT_USER=default.user